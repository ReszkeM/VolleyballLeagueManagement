@using VolleyballLeagueManagement.Common.Enums
@model VolleyballLeagueManagement.UsersAccounts.Contracts.ViewModels.ChangeUserRoleViewModel

@{
    ViewBag.Title = "ChangeRole";
}

<h2>ChangeRole</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ChangeUserRoleViewModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserId)

        <div class="form-group">
            @Html.LabelFor(model => model.Role, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Role, EnumHelper.GetSelectList(typeof(Role)), new { @class = "form-control col-md-3" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to account", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
