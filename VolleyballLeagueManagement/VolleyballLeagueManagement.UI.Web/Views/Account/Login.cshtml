@using VolleyballLeagueManagement.UsersAccounts.Contracts.ViewModels
@model LogInViewModel

<h2>Zaloguj się</h2>
<hr />

<div class="row">
    <div class="col-md-12">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="col-md-4" style="margin-left: 50px">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Login, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Login, new { @class = "form-control col-md-4" })
                            <h4>@Html.ValidationMessageFor(model => model.Login, "", new { @class = "label label-danger col-md-offset-1" })</h4>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control col-md-4" })
                            <h4>@Html.ValidationMessageFor(model => model.Password, "", new { @class = "label label-danger col-md-offset-1" })</h4>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Zaloguj" class="btn btn-default" />
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-12" style="margin-bottom: 10px">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe, new { @class = "control-label", @style = "margin-left: 5px" })
                        </div>
                        <div class="col-md-offset-2 col-md-12" style="margin-bottom: 10px">
                            @Html.ActionLink("Zapomniałem hasła", "ForgotPassword")
                        </div>
                        <div class="col-md-12" style="margin-top: 30px">
                            <p style="font-size: 12px">* Nie zaznaczaj tej opcji, jeśli nie logujesz się na prywatnym komputerze.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="jumbotron" style="background-color: dimgrey">
                        <h2 style="margin: -15px 0 15px 0">Nie posiadasz jeszcze konta?</h2>
                        <p style="font-size: 18px">
                            Zarejestruj się już teraz i skorzystaj z wszystkich funkcjonalności systemu.
                            Załóż własną ligę i odkrywaj udogodnienia jakie niesie nasz serwis,
                            lub skompletuj zespół i razem podbijajcie ligi w waszej okolicy!
                        </p>
                        <hr />
                        <div class="form group row col-md-10">
                            <input id="NewAccountButton" type="button" class="btn btn-primary" value="Zarejestruj nowe konto" />
                        </div>
                    </div>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $('#NewAccountButton').click(function () {
        window.location.href = '/Account/Register';
        console.log(window.location.href);
    })
</script>