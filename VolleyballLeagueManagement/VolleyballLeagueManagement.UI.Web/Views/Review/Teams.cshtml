@model IEnumerable<VolleyballLeagueManagement.Management.Contracts.ViewModels.TeamPreviewViewModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CoachFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CoachLastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CoachFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CoachLastName)
        </td>
        <td>
            @Html.ActionLink("Zobacz zawodników", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Zobacz terminarz", "Details", new { id=item.Id }) |
            @Html.ActionLink("Zobacz ligę", "League", new { teamId = item.Id })
        </td>
    </tr>
}

</table>
