@model VolleyballLeagueManagement.Management.Contracts.ViewModels.FindViewModel

<h4>Szukaj ligi</h4>
<hr />

@using (Html.BeginForm())
{
    <div class="form-group row" style="padding-left: 20px">
        @Html.EditorFor(model => model.Input, new { htmlAttributes = new { @class = "form-control", @placeholder = "Wpisz nazwę miasta" } })
    </div>

    <div class="form-group row" style="padding-left: 20px">
        <input type="submit" value="Szukaj" class="btn btn-default" />
    </div>

    <div class="form-group row" style="padding-left: 20px">
        @Html.ActionLink("Wróc do strony głównej", "Index", "Home")
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}