@model VolleyballLeagueManagement.Management.Contracts.ViewModels.FindViewModel
@{
    ViewBag.Tittle = "Szukaj drużyny";
}

<h4>@ViewBag.Tittle</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group row">
        @Html.EditorFor(model => model.Input, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Szukaj" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Wróc do strony głównej", "Index", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}