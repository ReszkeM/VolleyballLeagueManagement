@using VolleyballLeagueManagement.Common.Enums
@model VolleyballLeagueManagement.Management.Contracts.ViewModels.UpdateLeagueStatusViewModel

@{
    ViewBag.Title = "UpdateStatus";
}

<h2>UpdateStatus</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.LeagueId)
    
    <div class="form-horizontal">
        <h4>UpdateLeagueStatusCommand</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Status, EnumHelper.GetSelectList(typeof(LeagueStatus)), new { @class = "form-control col-md-3" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
