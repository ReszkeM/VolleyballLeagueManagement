@model VolleyballLeagueManagement.Management.Contracts.ViewModels.RemoveViewModel
@{
    ViewBag.Title = "RemoveTeam";
}

<h2>@ViewBag.Title</h2>

<p>Are u sure, you want to remove your league?</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to management", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



